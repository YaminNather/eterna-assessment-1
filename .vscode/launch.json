{
    "configurations": [
        {
            "name": "Start Server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "start:dev"
            ],
            
            "skipFiles": [
                "<node_internals>/**"
            ],

            "outputCapture": "std"
        },

        {
            "name": "Start Worker",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "start-worker:dev"
            ],
            
            "skipFiles": [
                "<node_internals>/**"
            ],

            "outputCapture": "std"
        }
    ]
}